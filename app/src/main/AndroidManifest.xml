<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.princeakash.budgetmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityAddExpense"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityViewMonthlyExpenses"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ActivityViewMonthlyExpensesBar"
            android:parentActivityName=".ActivityViewMonthlyExpenses"/>
        <activity android:name=".ActivityViewMonthlyExpensesList"
            android:parentActivityName=".ActivityViewMonthlyExpenses"/>
        <activity android:name=".ActivityViewMonthlyExpensesPie"
            android:parentActivityName=".ActivityViewMonthlyExpenses"/>
        <activity android:name=".ActivityTrackRelative"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ActivityRelativeMonthly"
            android:parentActivityName=".ActivityTrackRelative"/>
        <activity android:name=".ActivityRelativeLine" />
        <activity android:name=".ActivityRelativeCategorywise"
            android:parentActivityName=".ActivityTrackRelative"/>
        <activity android:name=".ActivityAddTarget"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>